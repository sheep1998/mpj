.header{
  z-index: 2;
  position: sticky;
  top: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: left;
  padding-left:25rpx;
  background-color: white;
  color:black;
}

.header .cate{
  width:600rpx;
  line-height:100rpx;
  font-size: 40rpx;
  font-weight:600
}

.head .plus{
  
}

.body{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}

.body .series-container{
  width:250rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height:350rpx;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.body .series-container image{
  width:200rpx;
  height:275rpx;
}

.body .series-container .name{
  text-align:left;
  font-size:35rpx;
  font-weight:500;
  width:200rpx;
  margin-top:10rpx;
}

.bottom-container{
  height:80rpx;
  line-height:80rpx;
  font-size:37rpx;
  display: flex;
  flex-direction: row;
  padding-left: 25rpx;
  justify-content: center;
}

.bottom-container .btn{
  background-color: black;
  color:white;
  width:280rpx;
  margin-left: 20rpx;
  height:90%;
  text-align:center;
}
