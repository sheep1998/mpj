/* miniprogram/pages/location/location.wxss */
.header{
  z-index: 2;
  position: sticky;
  top: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: left;
  padding-left:25rpx;
  background-color: white;
  color:black;
  font-size: 50rpx;
}

.information-container{
  height:240rpx;
  border-bottom: 1px solid #c0c0c0;
  display: flex;
  flex-direction: row;
  margin-left:40rpx;
  margin-right:40rpx;
  align-items: center;
}
.information-container .icon-container{
  height:80rpx;
  width:80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.information-container .text-container{
  padding-left: 40rpx;
  display: flex;
  flex-direction: column;
  width:550rpx;
}

.information-container .text-container .title{
  font-weight:bold;
  line-height:50rpx;
  font-size:30rpx;
  letter-spacing: 3rpx;
}

.information-container .text-container .content{
  font-size:25rpx;
  color:#777777;
}
