.header{
  z-index: 2;
  position: sticky;
  top: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: left;
  padding-left:25rpx;
  background-color: white;
  color:black;
  font-size: 50rpx;
}

.hover-btn{
  background-color: #e2e2e2;
}

.bubble{  
  position: relative;
  overflow: hidden;
}
.bubble:after{
  content: "";
  background: #999;
  position: absolute; 
  width: 750rpx;
  height: 750rpx;
  left: calc(50% - 375rpx);
  top: calc(50% - 375rpx);
  opacity: 0;
  margin: auto;
  border-radius: 20%;
  transform: scale(1);
  transition: all 0.4s ease-in-out;
}
.bubble:active:after {
  transform: scale(0);
  opacity: 1;
  transition: 0s;
}

.information-container{
  height:240rpx;
  border-bottom: 1px solid #c0c0c0;
  display: flex;
  flex-direction: row;
  margin-left:40rpx;
  margin-right:40rpx;
  align-items: center;
}
.information-container .icon-container{
  height:80rpx;
  width:80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.information-container .text-container{
  padding-left: 40rpx;
  display: flex;
  flex-direction: column;
  width:450rpx;
}

.information-container .text-container .title{
  font-weight:bold;
  height:50rpx;
  line-height:50rpx;
  font-size:30rpx;
  letter-spacing: 3rpx;
}

.information-container .text-container .content{
