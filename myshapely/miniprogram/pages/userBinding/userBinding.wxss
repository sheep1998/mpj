/* miniprogram/pages/userBinding/userBinding.wxss */
.header{
  z-index: 2;
  position: sticky;
  top: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: left;
  padding-left:25rpx;
  background-color: white;
  color:black;
  font-size: 50rpx;
}

.input-container{
  height:140rpx;
  padding-left:25rpx;
  padding-right:25rpx;
  margin-bottom:50rpx
}

.input-container .hint{
  height:40rpx;
  font-size:30rpx;
  line-height:40rpx;
  color:#e2e2e2;
}

.input-container .nhint{
  height:40rpx;
  font-size:30rpx;
  line-height:40rpx;
  color:#ffffff;
}

.input-container .main{
  z-index:1;
  line-height: 60rpx;
  height:60rpx;
  font-size:35rpx;
}

.input-container .warn{
  height:40rpx;
  font-size:30rpx;
  line-height:40rpx;
  color:#ff0808;
}

.input-container .nwarn{
  height:40rpx;
  font-size:30rpx;
  line-height:40rpx;
  color:#ffffff;
}

.deactive-class{
  border-bottom: 1px solid #e2e2e2;
}

.active-class{
  border-bottom: 1px solid #000000;
}

.bottom-container{
  height:80rpx;
  line-height:80rpx;
  font-size:37rpx;
  display: flex;
  flex-direction: row;
  padding-left: 25rpx;
  justify-content: center;
}

.bottom-container .btn{
  background-color: black;
  color:white;
  width:280rpx;
  margin-left: 20rpx;
  height:90%;
  text-align:center;
}

.recommand{
  height:40rpx;
  font-size:30rpx;
  line-height:40rpx;
  color:#000000;
  font-weight: bold
}

.input-box{
  border-bottom: 1px solid #e2e2e2;
  height:80rpx;
  font-size:35rpx;
  color:#777777;
  text-align: left;
  padding-left:0rpx
}

.save-container{
  width:100%;
  position: fixed;
  bottom:40rpx;
  display: flex;
  justify-content: center;
  
}

.save{
  background-color: black;
  width:700rpx;
  z-index:1;
  color:white;
  font-size:33rpx;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
}